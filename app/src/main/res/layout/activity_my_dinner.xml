<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MyDinnerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/DinnerLayout1"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonDinner1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:background="@mipmap/dinner1"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Oven Baked Salmon with Salad" />

            <Button
                android:id="@+id/ButtonDinner2"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/dinner2"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Savory Salmon Hash" />

        </LinearLayout>

        <LinearLayout android:id="@+id/DinnerLayout2"
            android:layout_below="@+id/DinnerLayout1"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonDinner3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:background="@mipmap/dinner3"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Cajun Chicken" />

            <Button
                android:id="@+id/ButtonDinner4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/dinner4"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Cauliflower Rice" />

        </LinearLayout>

        <LinearLayout android:id="@+id/DinnerLayout3"
            android:layout_below="@+id/DinnerLayout2"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonDinner5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/dinner5"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Cauliflower Stir Fry" />

            <Button
                android:id="@+id/ButtonDinner6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>