<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MyLunchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/LunchLayout1"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonLunch1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/lunch1"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Fettuccini Alfredo" />

            <Button
                android:id="@+id/ButtonLunch2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:background="@mipmap/lunch2"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Kale Salad" />

        </LinearLayout>

        <LinearLayout android:id="@+id/LunchLayout2"
            android:layout_below="@+id/LunchLayout1"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonLunch3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/lunch3"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="BBQ Chicken Cobb Salad" />

            <Button
                android:id="@+id/ButtonLunch4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/lunch4"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Orange Salad" />

        </LinearLayout>

        <LinearLayout android:id="@+id/LunchLayout3"
            android:layout_below="@+id/LunchLayout2"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonLunch5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:background="@mipmap/lunch5"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Hummus Quinoa Cakes" />

            <Button
                android:id="@+id/ButtonLunch6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:background="@mipmap/lunch6"
                android:gravity="bottom"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Prosciutto Sandwich" />

        </LinearLayout>

        <LinearLayout android:id="@+id/LunchLayout4"
            android:layout_below="@+id/LunchLayout3"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonLunch7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/lunch7"
                android:gravity="bottom"
                android:textSize="20sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitXY"
                android:text="Brussels Sprouts" />

            <Button
                android:id="@+id/ButtonLunch8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>