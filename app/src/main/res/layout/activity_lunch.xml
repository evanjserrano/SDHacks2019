<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".LunchActivity">

    <Button
        android:id="@+id/lunch1"
        android:layout_width="289dp"
        android:layout_height="137dp"
        android:layout_above="@+id/lunch2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:text="Recipe 1"
        app:layout_constraintTop_toBottomOf="@+id/lunchLabel"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/lunch2"
        android:layout_width="289dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:text="Recipe 2"
        app:layout_constraintTop_toBottomOf="@+id/lunch1"
        tools:layout_editor_absoluteX="61dp" />

    <TextView
        android:id="@+id/lunchLabel"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:text="Lunch"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="49dp" />
</androidx.constraintlayout.widget.ConstraintLayout>